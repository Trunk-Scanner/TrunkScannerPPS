<Window x:Class="TrunkScannerPPS.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help Dialog" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock TextWrapping="Wrap" TextAlignment="Center">
            For help, visit our 
            <Hyperlink NavigateUri="https://discord.gg/tMrsp9T9pd" RequestNavigate="Hyperlink_RequestNavigate">
                Discord Server
            </Hyperlink>.
        </TextBlock>
        <Button Content="Close" Margin="10" HorizontalAlignment="Center" Click="CloseButton_Click"/>
    </StackPanel>
</Window>